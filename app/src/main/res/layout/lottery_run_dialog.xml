<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/icon"
    android:backgroundTint="@color/icon"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/lotteryRun_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_medium"
        android:text="Event Lottery"
        android:textAlignment="center"
        android:textColor="@color/buttonBG2"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lotteryRun_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Description"
        android:textColor="@color/text3"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lotteryRun_buttonGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lotteryRun_warningText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/inter"
        android:text="Running the lottery will close the waitlist"
        android:textAlignment="center"
        android:textColor="@color/buttonBG2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lotteryRun_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lotteryRun_title"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/lotteryRun_buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/lotteryRun_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="#00000000"
            android:text="Cancel"
            android:textColor="@color/buttonBG1"
            app:iconTint="@null"
            app:strokeColor="@color/buttonBG1"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/lotteryRun_startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/buttonBG1"
            android:text="Start" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>