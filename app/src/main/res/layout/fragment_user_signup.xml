<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_signup_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1">

    <TextView
        android:id="@+id/signupHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome To PickMe!"
        android:textColor="@color/text1"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/signupSubheaderText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signupSubheaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Let's sign up!"
        android:textColor="@color/text2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/signupFirstNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupHeaderText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/signupFirstNameText"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="First Name*"
        android:textColor="@color/text2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/signupFirstNameEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupSubheaderText" />

    <EditText
        android:id="@+id/signupFirstNameEdit"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext_background"
        android:fontFamily="sans-serif-black"
        android:hint="John"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="@color/text3"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/signupLastNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupFirstNameText"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/signupLastNameText"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="Last Name"
        android:textColor="@color/text2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/signupLastNameEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupFirstNameEdit" />

    <EditText
        android:id="@+id/signupLastNameEdit"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext_background"
        android:fontFamily="sans-serif-black"
        android:hint="Doe"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="@color/text3"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/signupSubmitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupLastNameText"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/signupSubmitButton"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/buttonDefault"
        android:contentDescription="Touch to get started!"
        android:fontFamily="sans-serif"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:text="Get Started!"
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupLastNameEdit"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
