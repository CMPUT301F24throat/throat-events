<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.AdminUserFragment"
    android:background="@color/background1">

    <LinearLayout
        android:id="@+id/imageCatalogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageCatalogBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/back"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toEndOf="@id/startGuide"
            app:layout_constraintTop_toBottomOf="@id/topGuide" />

        <TextView
            android:id="@+id/imageCatalogHeaderText"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:text="User Profiles"
            android:textAllCaps="false"
            android:textColor="@color/text1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/icon" />

        <ImageView
            android:id="@+id/imageCatalogRefresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/back"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_refresh"
            app:layout_constraintStart_toEndOf="@id/startGuide"
            app:layout_constraintTop_toBottomOf="@id/topGuide"
            app:tint="@color/text1" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/startGuide"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/endGuide"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/bottomGuide"/>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/search_bar_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="15dp"
        android:hint="Search"
        android:maxLines="1"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/text3"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/endGuide"
        app:layout_constraintStart_toEndOf="@id/startGuide"
        app:layout_constraintTop_toBottomOf="@+id/imageCatalogHeader" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/dialogBG1"
            app:layout_constraintStart_toEndOf="@id/startGuide"
            app:layout_constraintEnd_toStartOf="@id/endGuide"
            app:layout_constraintTop_toBottomOf="@id/searchBar"
            android:layout_marginTop="15dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/dialogBG1"
            app:layout_constraintStart_toEndOf="@id/startGuide"
            app:layout_constraintEnd_toStartOf="@id/endGuide"
            app:layout_constraintTop_toBottomOf="@id/idTitle" />

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/dialogBG1"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintBottom_toTopOf="@id/view2"
            app:layout_constraintStart_toEndOf="@id/idTitle"/>

        <View
            android:id="@+id/view4"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/dialogBG1"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintBottom_toTopOf="@id/view2"
            app:layout_constraintStart_toEndOf="@id/fullNameTitle"/>

    <TextView
        android:id="@+id/idTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingStart="5dp"
        android:text="Device ID"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/startGuide"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/fullNameTitle"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:paddingVertical="5dp"
        android:paddingStart="5dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/view1" />

        <TextView
            android:id="@+id/noUsersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No users loaded."
            android:textColor="@color/text1"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allUsersList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/startGuide"
            app:layout_constraintEnd_toStartOf="@id/endGuide"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/bottomGuide"
            tools:listitem="@layout/user_profile_item_view"
            tools:itemCount="20" />

    </androidx.constraintlayout.widget.ConstraintLayout>