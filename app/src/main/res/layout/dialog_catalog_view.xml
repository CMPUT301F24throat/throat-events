<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dialogBG1">

    <TextView
        android:id="@+id/dialogCatalogHeaderText"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/delete_this_image"
        android:textAllCaps="false"
        android:textColor="@color/text1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialogCatalogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxHeight="512dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogCatalogHeaderText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dialogCatalogImageView"
        android:gravity="center">

        <Button
            android:id="@+id/dialogCatalogDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="@color/buttonDefault"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Delete Image"
            android:textAlignment="center"
            android:textColor="@color/text1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogCatalogImageView" />

        <Button
            android:id="@+id/dialogCatalogCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="@color/buttonDefault"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/text1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toEndOf="@+id/dialogCatalogDeleteButton"
            app:layout_constraintTop_toBottomOf="@+id/dialogCatalogImageView" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>